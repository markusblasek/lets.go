doctype html
html(lang='en', ng-app='letsGo')
  head
    title= title
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700', rel='stylesheet', type='text/css')
    link(href='/static/lib/semantic/css/semantic.min.css', rel='stylesheet', type='text/css')
    link(href='/static/lib/nprogress/css/nprogress.css', rel='stylesheet', type='text/css')
    link(href='/static/css/main.css', rel='stylesheet', type='text/css')
  body(ng-controller='AppCtrl', ng-cloak)
    include partials/menu

    div(ng-view)

    script(src='/static/lib/jQuery/jquery-1.10.2.min.js')
    script(src='/static/lib/semantic/javascript/semantic.min.js')
    script(src='/static/lib/nprogress/js/nprogress.js')
    script(src='/socket.io/socket.io.js')
    script(src='/static/lib/angular/angular.min.js')
    script(src='/static/lib/angular/angular-route.min.js')
    script(src='/static/lib/angular/angular-sanitize.min.js')
    script(src='/static/lib/angular/angular-resource.min.js')
    script(src='/static/lib/underscore/underscore.min.js')

    script(src='/static/js/app.js')
    script(src='/static/js/services.js')
    script(src='/static/js/controllers.js')
    script(src='/static/js/directives.js')

    script.
      NProgress.configure({
        showSpinner: false,
        ease: 'ease',
        speed: 100
      });

